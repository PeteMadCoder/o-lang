fn malloc(size: int) -> *byte;
fn free(ptr: *byte);
fn strlen(str: *byte) -> int;
fn memcpy(dest: *byte, src: *byte, n: int) -> *void;

struct StringLike {
    buffer: *byte;
    length: int;
    capacity: int;

    new(ptr: *char) {
        var len = 0;
        unsafe {
            len = strlen(ptr);
        }

        this.length = len;
        this.capacity = len + 1;

        unsafe {
            this.buffer = malloc(this.capacity);
            memcpy(this.buffer, ptr, len);
            
            // Null terminate
            var end_ptr = &this.buffer[len];
            *end_ptr = 0;
        }
    }
}

fn main() -> int {
    var s = new StringLike("Hello");
    return 0;
}