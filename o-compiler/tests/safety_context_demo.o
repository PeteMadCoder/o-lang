fn demonstrateSafetyContext() -> int {
    var x = 10;
    
    // Safe context: unsafeDepth = 0
    var safe_operation = &x;
    
    unsafe {
        // Unsafe context: unsafeDepth = 1
        var unsafe_var = 20;
        
        unsafe {
            // Nested unsafe: unsafeDepth = 2
            var nested_unsafe = 30;
        }
        // Back to: unsafeDepth = 1
        
        var another_unsafe = 40;
    }
    // Back to safe context: unsafeDepth = 0
    
    var final_safe = 50;
    return final_safe;
}

fn main() -> int {
    var result = demonstrateSafetyContext();
    return result;
}
