fn testUnsafeBlock() -> int {
    var x = 42;
    var ptr = &x;
    
    // This is an unsafe block - safety checks are disabled inside
    unsafe {
        var y = 100;
        var z = y + 50;
        // Later: *ptr = z; would be allowed here
    }
    
    // Back to safe context
    var safe_var = 200;
    
    return safe_var;
}

fn testNestedUnsafe() -> int {
    unsafe {
        var outer = 10;
        unsafe {
            var inner = 20;
            var sum = outer + inner;
        }
        var result = outer + 5;
    }
    return 0;
}

fn main() -> int {
    var result1 = testUnsafeBlock();
    var result2 = testNestedUnsafe();
    return result1;
}
