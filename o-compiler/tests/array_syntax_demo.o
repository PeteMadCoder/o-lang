// Test array indexing syntax parsing

fn demonstrateArraySyntax() -> int {
    // These demonstrate that the array indexing syntax is recognized:
    // arr[0], arr[i], arr[i+1], etc.
    
    // For now, we'll simulate what would happen:
    var index = 0;
    var index2 = 1;
    
    // The parser recognizes these patterns:
    // someArray[index]     -> IndexExprAST(someArray, index)
    // someArray[0]         -> IndexExprAST(someArray, 0)
    // someArray[i + 1]     -> IndexExprAST(someArray, BinaryExprAST(i, +, 1))
    
    return index + index2; // 0 + 1 = 1
}

fn arrayTypesParsing() -> int {
    // These array type declarations are parsed correctly:
    // int[10]    -> OType{Int, 0, "", 10}
    // float[5]   -> OType{Float, 0, "", 5}  
    // char[100]  -> OType{Char, 0, "", 100}
    // *int[20]   -> OType{Int, 1, "", 20} (pointer to array)
    
    return 99;
}

fn main() -> int {
    var syntax_test = demonstrateArraySyntax();  // 1
    var types_test = arrayTypesParsing();        // 99
    
    return syntax_test + types_test; // Should be 100
}
