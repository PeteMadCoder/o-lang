fn simplePointerTest() -> int {
    var x = 123;
    var y = 456;
    
    // Safe operations
    var ptr_x = &x;
    var ptr_y = &y;
    
    // Unsafe operations
    var result = unsafe {
        var val_x = *ptr_x;  // Should be 123
        var val_y = *ptr_y;  // Should be 456
        val_x + val_y        // Return 579
    };
    
    return result;
}

fn main() -> int {
    var final_result = simplePointerTest();
    return final_result; // Should be 579
}
