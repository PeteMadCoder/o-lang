// External C functions
fn strlen(str: *byte) -> int;
fn memcpy(dest: *byte, src: *byte, n: int) -> *void;
fn malloc(size: int) -> *byte;
fn free(ptr: *byte);

// Minimal String-like struct without complex methods
struct SimpleString {
    buffer: *byte;
    length: int;
    capacity: int;

    // Constructor: Creates from a C-style string literal
    new(ptr: *char) {
        var len = 0;
        len = 5;  // Hardcoded for testing
        
        this.length = len;
        this.capacity = len + 1;

        this.buffer = malloc(this.capacity);
    }
}

fn main() -> int {
    var msg = new SimpleString("Hello");
    return 0;
}