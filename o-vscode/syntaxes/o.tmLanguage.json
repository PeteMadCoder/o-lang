{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "O",
  "scopeName": "source.o",
  "patterns": [
    {
      "comment": "Keywords",
      "match": "\\b(fn|return|if|else|while|for|match|import|struct|new|var|let|const|unsafe|as|delete)\\b",
      "name": "keyword.control.o"
    },
    {
      "comment": "Types",
      "match": "\\b(int|float|bool|char|void|String|Vector)\\b",
      "name": "support.type.o"
    },
    {
      "comment": "Boolean Literals",
      "match": "\\b(true|false)\\b",
      "name": "constant.language.o"
    },
    {
      "comment": "Function Definition",
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "name": "entity.name.function.o"
    },
    {
      "comment": "Strings",
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.o"
    },
    {
      "comment": "Comments",
      "match": "//.*$",
      "name": "comment.line.double-slash.o"
    },
    {
      "comment": "Numbers",
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.o"
    }
  ]
}