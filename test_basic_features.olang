// Simple O language example demonstrating basic features
// Without structs to avoid compiler bugs

fn main() -> int {
    // Variable declarations
    var x = 10;      // Type inference
    var y: int = 20; // Explicit type
    
    // Basic arithmetic
    var sum = x + y;
    
    // Control flow
    if (sum > 25) {
        var result = sum * 2;
        return result;
    } else {
        return sum;
    }
}