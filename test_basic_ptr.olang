// External C functions
fn strlen(*byte str) -> int;
fn memcpy(*byte dest, *byte src, int n) -> *void;
fn malloc(int size) -> *byte;
fn free(*byte ptr);
fn printf(*byte str);

fn main() -> int {
    // Test basic pointer operations
    var test_str = "Hello";
    
    unsafe {
        printf("Testing basic pointer operations:\n");
        printf(test_str);
        printf("\n");
        
        // Test direct indexing
        var first_char = test_str[0];
        if (first_char == 72) {
            printf("Direct indexing works: got 'H'\n");
        } else {
            printf("Direct indexing failed\n");
        }
    }
    
    return 0;
}
